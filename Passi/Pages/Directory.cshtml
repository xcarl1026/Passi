@page "{searchQuery?}"
@model DirectoryModel
@{
    ViewData["Title"] = "Directory";
    Layout = "_Layout2";
}

@{ if (!string.IsNullOrEmpty(Model.Username))
    {

        <div class="container">
            <div style="padding-bottom:20px" class="row">
                <div class="col-lg-12">
                    <label>Search Directory</label>
                    <input type="text" class="form-control" id="searchQuery" placeholder="Search" value="">
                    <button class="btn btn-primary my-2 my-sm-o" id="searchADUser">Search AD</button>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12" id="grid"></div>
            </div>
        </div>


        <div class="modal" id="resetModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Modal title</h5>
                        <button type="button" id="xModalBtn" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form id="pwResetForm" method="post">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="ResetPassword">Reset Password:</label>
                                <input type="text" asp-for="ResetPassword" class="form-control" />
                                <span asp-validation-for="ResetPassword"></span>
                            </div>
                        </div>
                        <div id="mfooter" class="modal-footer">
                            <button type="submit" id="resetPWSave" class="btn btn-primary">Save changes</button>
                            <button type="button" id="closeModalBtn" class="btn btn-secondary" data-dismiss="modal">Close</button>';
                        </div>
                    </form>
                </div>
            </div>
        </div>


    }
    else
    {
        Response.Redirect("/Login");
    }
    @section scripts{
        @await Html.PartialAsync("_ValidationScriptsPartial")
        <script>

            $('#searchADUser').on('click', searchADUser);


            function searchADUser() {
                var url = 'UserInfoGrid/' + $('#searchQuery').val();
                fetch(url)
                    .then((response) => {
                        return response.text();
                    })
                    .then((result) => {
                        $('#grid').html(result);
                        $('#resetpw').on('click', resetPassword);
                    })
            }

            function resetPassword() {
                $('#resetModal').css('display', 'block');
                $('#xModalBtn').on('click', function close() { $('#resetModal').css('display', 'none'); });
                $('#closeModalBtn').on('click', function close() { $('#resetModal').css('display', 'none'); });
            }


